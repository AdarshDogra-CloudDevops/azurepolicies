{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "anyOf": [
            {
              "field": "type",
              "equals": "Microsoft.ContainerRegistry/registries"
            },
            {
              "field": "type",
              "equals": "Microsoft.ContainerInstance/containerGroups"
            }
          ]
        },
        {
          "anyOf": [
            {
              "not": {
                "field": "location",
                "equals": "eastus"
              }
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  }
}
